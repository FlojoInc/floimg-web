---
/**
 * Showcase Preview - Live community showcase items on homepage
 * Fetches from showcase API, shows 8 trending items
 */

const API_URL = import.meta.env.PUBLIC_API_URL || "https://api.floimg.com";
const STUDIO_URL = import.meta.env.PUBLIC_STUDIO_URL || "https://studio.floimg.com";
---

<section class="showcase-preview-section">
  <div class="section-container">
    <div class="section-header">
      <h2 class="section-title">Community</h2>
      <p class="section-subtitle">See what others are creating with FloImg workflows.</p>
    </div>

    <!-- Loading state -->
    <div id="showcase-loading" class="showcase-grid">
      {
        [...Array(4)].map(() => (
          <div class="skeleton-card">
            <div class="skeleton-image" />
            <div class="skeleton-content">
              <div class="skeleton-title" />
              <div class="skeleton-meta" />
            </div>
          </div>
        ))
      }
    </div>

    <!-- Loaded content -->
    <div id="showcase-grid" class="showcase-grid hidden"></div>

    <!-- Empty state -->
    <div id="showcase-empty" class="showcase-empty hidden">
      <svg class="empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
        ></path>
      </svg>
      <p class="empty-text">No showcase items yet</p>
      <p class="empty-subtext">Be the first to share your creation!</p>
      <a href={STUDIO_URL} class="empty-cta">Open Studio</a>
    </div>

    <!-- Community CTAs -->
    <div class="community-ctas">
      <div class="community-cta-card">
        <a
          href="https://github.com/FlojoInc/FloImg"
          class="github-cta"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg viewBox="0 0 16 16" fill="currentColor" class="gh-icon">
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
          Star on GitHub
        </a>
        <p class="cta-description">Help us grow! Stars support open source development.</p>
      </div>
      <div class="community-cta-card">
        <a href="/showcase" class="showcase-cta">
          Explore Showcase
          <svg
            class="cta-arrow"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round"></path>
          </svg>
        </a>
        <p class="cta-description">
          See what the community is creating and share your own workflows.
        </p>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ API_URL }}>
  function formatRelativeTime(dateStr) {
    const date = new Date(dateStr);
    const now = new Date();
    const diffMs = now - date;
    const diffSec = Math.floor(diffMs / 1000);
    const diffMin = Math.floor(diffSec / 60);
    const diffHour = Math.floor(diffMin / 60);
    const diffDay = Math.floor(diffHour / 24);

    if (diffDay > 30) return date.toLocaleDateString();
    if (diffDay > 0) return `${diffDay}d ago`;
    if (diffHour > 0) return `${diffHour}h ago`;
    if (diffMin > 0) return `${diffMin}m ago`;
    return "just now";
  }

  function createCard(item) {
    // Use presigned URL from API if available, otherwise fall back to proxy URL
    const imageUrl = item.image.url || `${API_URL}/api/storage/images/${item.image.id}/content`;
    const authorName = item.user.name || item.user.username || "Anonymous";
    const authorInitial = authorName[0]?.toUpperCase() || "?";
    // Truncate title to ~60 chars for cleaner cards
    const displayTitle = item.title.length > 60 ? item.title.slice(0, 57) + "..." : item.title;

    return `
      <a href="/showcase/item?id=${item.id}" class="showcase-card">
        <div class="card-image-container">
          <img
            src="${imageUrl}"
            alt="${displayTitle}"
            class="card-image"
            loading="lazy"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
          />
          <div class="card-image-fallback">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="3" width="18" height="18" rx="2" />
              <circle cx="8.5" cy="8.5" r="1.5" />
              <path d="M21 15l-5-5L5 21" />
            </svg>
          </div>
          ${item.workflowShared ? '<span class="workflow-badge">Workflow</span>' : ""}
        </div>
        <div class="card-body">
          <p class="card-title">${displayTitle}</p>
          <div class="card-footer">
            <div class="card-author">
              <span class="author-avatar">${authorInitial}</span>
              <span class="author-name">${authorName}</span>
            </div>
            <div class="card-stats">
              <span class="stat" title="Likes">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
                ${item.likeCount}
              </span>
              <span class="stat" title="Views">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                </svg>
                ${item.viewCount}
              </span>
            </div>
          </div>
        </div>
      </a>
    `;
  }

  async function loadShowcase() {
    const loadingEl = document.getElementById("showcase-loading");
    const gridEl = document.getElementById("showcase-grid");
    const emptyEl = document.getElementById("showcase-empty");
    const sectionEl = document.querySelector(".showcase-preview-section");

    try {
      const res = await fetch(`${API_URL}/api/showcase?limit=4&sort=recent`, {
        credentials: "include",
      });

      if (!res.ok) throw new Error("Failed to fetch");

      const data = await res.json();
      const items = data.items;

      if (items.length === 0) {
        loadingEl.classList.add("hidden");
        emptyEl.classList.remove("hidden");
        return;
      }

      // Populate grid
      gridEl.innerHTML = items.map(createCard).join("");

      loadingEl.classList.add("hidden");
      gridEl.classList.remove("hidden");
    } catch (err) {
      console.error("Failed to load showcase:", err);
      // Show empty state on error - keeps Community section visible with CTAs
      loadingEl.classList.add("hidden");
      emptyEl.classList.remove("hidden");
    }
  }

  loadShowcase();
</script>

<style>
  .showcase-preview-section {
    padding: 5rem 1.5rem;
    background: #0f0f10;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .section-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 600;
    color: #fafafa;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1rem;
    color: #71717a;
  }

  /* Grid: 2x2 on desktop, 2 cols on tablet, 1 col on mobile */
  .showcase-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }

  @media (max-width: 600px) {
    .showcase-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  /* Card styles - :global() needed for dynamically generated content */
  :global(.showcase-card) {
    display: flex;
    flex-direction: column;
    background: #1a1a1c;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease,
      border-color 0.2s ease;
  }

  :global(.showcase-card:hover) {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    border-color: rgba(255, 255, 255, 0.12);
  }

  /* Image container with proper fallback */
  :global(.card-image-container) {
    position: relative;
    aspect-ratio: 4 / 3;
    background: linear-gradient(135deg, #1f1f23 0%, #27272a 100%);
    overflow: hidden;
  }

  :global(.card-image) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  :global(.showcase-card:hover .card-image) {
    transform: scale(1.03);
  }

  :global(.card-image-fallback) {
    display: none;
    position: absolute;
    inset: 0;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1f1f23 0%, #27272a 100%);
  }

  :global(.card-image-fallback svg) {
    width: 48px !important;
    height: 48px !important;
    color: #3f3f46;
  }

  :global(.workflow-badge) {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 4px 8px;
    background: rgba(13, 148, 136, 0.9);
    backdrop-filter: blur(4px);
    color: white;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    border-radius: 4px;
  }

  /* Card body - clean typography */
  :global(.card-body) {
    padding: 14px 16px 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  :global(.card-title) {
    font-size: 14px;
    font-weight: 500;
    line-height: 1.5;
    color: #e4e4e7;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  :global(.card-footer) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  :global(.card-author) {
    display: flex;
    align-items: center;
    gap: 8px;
    min-width: 0;
  }

  :global(.author-avatar) {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #2d2d30 0%, #3f3f46 100%);
    border-radius: 50%;
    font-size: 11px;
    font-weight: 600;
    color: #a1a1aa;
  }

  :global(.author-name) {
    font-size: 13px;
    color: #71717a;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  :global(.card-stats) {
    display: flex;
    align-items: center;
    gap: 4px;
    flex-shrink: 0;
  }

  :global(.stat) {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 4px 8px;
    background: rgba(255, 255, 255, 0.04);
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
    color: #71717a;
    transition:
      background 0.15s ease,
      color 0.15s ease;
  }

  :global(.stat:hover) {
    background: rgba(255, 255, 255, 0.08);
    color: #a1a1aa;
  }

  :global(.stat svg) {
    width: 14px !important;
    height: 14px !important;
    flex-shrink: 0;
  }

  :global(.stat:first-child svg) {
    color: #f87171;
    opacity: 0.8;
  }

  :global(.stat:last-child svg) {
    color: #60a5fa;
    opacity: 0.8;
  }

  /* Skeleton Loading */
  .skeleton-card {
    background: #1a1a1c;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    overflow: hidden;
  }

  .skeleton-image {
    aspect-ratio: 4 / 3;
    background: linear-gradient(90deg, #1f1f23 0%, #27272a 50%, #1f1f23 100%);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }

  .skeleton-content {
    padding: 14px 16px 16px;
  }

  .skeleton-title {
    height: 14px;
    background: #27272a;
    border-radius: 4px;
    margin-bottom: 12px;
    width: 85%;
  }

  .skeleton-meta {
    height: 12px;
    background: #27272a;
    border-radius: 4px;
    width: 50%;
  }

  @keyframes shimmer {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  /* Empty State */
  .showcase-empty {
    text-align: center;
    padding: 4rem 1.5rem;
  }

  .empty-icon {
    width: 56px;
    height: 56px;
    color: #3f3f46;
    margin: 0 auto 1rem;
  }

  .empty-text {
    font-size: 1rem;
    font-weight: 500;
    color: #e4e4e7;
    margin-bottom: 0.375rem;
  }

  .empty-subtext {
    color: #52525b;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .empty-cta {
    display: inline-block;
    padding: 10px 20px;
    background: rgb(13, 148, 136);
    color: white;
    font-size: 14px;
    font-weight: 500;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.15s ease;
  }

  .empty-cta:hover {
    background: rgb(15, 118, 110);
  }

  /* Community CTAs */
  .community-ctas {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-top: 2.5rem;
  }

  @media (max-width: 600px) {
    .community-ctas {
      grid-template-columns: 1fr;
    }
  }

  .community-cta-card {
    padding: 1.25rem;
    background: #1a1a1c;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    text-align: center;
  }

  .github-cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: #fafafa;
    color: #18181b;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: opacity 0.15s ease;
  }

  .github-cta:hover {
    opacity: 0.9;
  }

  .gh-icon {
    width: 18px;
    height: 18px;
  }

  .showcase-cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: #e4e4e7;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .showcase-cta:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.25);
  }

  .cta-arrow {
    width: 16px;
    height: 16px;
    transition: transform 0.15s ease;
  }

  .showcase-cta:hover .cta-arrow {
    transform: translateX(3px);
  }

  .cta-description {
    margin-top: 10px;
    font-size: 13px;
    color: #52525b;
    line-height: 1.5;
  }

  .hidden {
    display: none !important;
  }
</style>
