---
import MarketingLayout from "../layouts/MarketingLayout.astro";

const API_URL = import.meta.env.PUBLIC_API_URL || "https://api.floimg.com";
---

<MarketingLayout title="User Profile" description="View a FloImg user's profile and creations.">
  <main class="profile-page">
    <div class="container">
      <!-- Loading state -->
      <div id="loading" class="loading-state">
        <div class="loading-spinner"></div>
      </div>

      <!-- Error state -->
      <div id="error-state" class="error-state hidden">
        <h1>User Not Found</h1>
        <p>This user doesn't exist or their profile is private.</p>
        <a href="/showcase" class="back-link-btn">Browse Showcase</a>
      </div>

      <!-- Content -->
      <div id="content" class="hidden">
        <!-- Profile header -->
        <div class="profile-header">
          <div class="avatar-container">
            <img id="avatar-img" src="" alt="" class="avatar-image hidden" />
            <div id="avatar-fallback" class="avatar-fallback"></div>
          </div>
          <div class="profile-info">
            <h1 class="profile-name">
              <span id="display-name"></span>
              <span id="username-badge" class="username-badge"></span>
            </h1>
            <p id="bio" class="bio hidden"></p>
            <div class="profile-stats">
              <span class="stat">
                <span id="project-count" class="stat-value">0</span>
                <span class="stat-label">Projects</span>
              </span>
              <span class="stat">
                <span id="workflow-count" class="stat-value">0</span>
                <span class="stat-label">Workflows</span>
              </span>
              <span class="stat">
                <span id="image-count" class="stat-value">0</span>
                <span class="stat-label">Images</span>
              </span>
            </div>
            <p id="member-since" class="member-since"></p>
          </div>
        </div>

        <!-- Public projects -->
        <div class="projects-section">
          <h2 class="section-title">Public Projects</h2>
          <div id="projects-loading" class="projects-loading">
            <div class="project-skeleton"></div>
            <div class="project-skeleton"></div>
            <div class="project-skeleton"></div>
          </div>
          <div id="projects-grid" class="projects-grid hidden"></div>
          <div id="no-projects" class="no-projects hidden">
            <p>This user hasn't shared any public projects yet.</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script define:vars={{ API_URL }}>
    const loadingEl = document.getElementById("loading");
    const errorEl = document.getElementById("error-state");
    const contentEl = document.getElementById("content");

    // Get username from query param
    const params = new URLSearchParams(window.location.search);
    const username = params.get("username");

    if (!username) {
      loadingEl.classList.add("hidden");
      errorEl.classList.remove("hidden");
    } else {
      fetchProfile();
    }

    async function fetchProfile() {
      try {
        const res = await fetch(`${API_URL}/api/users/${username}`, {
          credentials: "include",
        });

        if (!res.ok) throw new Error("Not found");

        const data = await res.json();
        renderProfile(data.user, data.stats);
        fetchProjects();
      } catch (err) {
        console.error("Failed to fetch profile:", err);
        loadingEl.classList.add("hidden");
        errorEl.classList.remove("hidden");
      }
    }

    function renderProfile(user, stats) {
      // Update page title
      document.title = `${user.name || `@${user.username}`} - FloImg`;

      // Avatar
      const avatarImg = document.getElementById("avatar-img");
      const avatarFallback = document.getElementById("avatar-fallback");
      if (user.avatarUrl) {
        avatarImg.src = user.avatarUrl;
        avatarImg.alt = user.name || user.username;
        avatarImg.classList.remove("hidden");
        avatarFallback.classList.add("hidden");
      } else {
        avatarFallback.textContent = (user.name?.[0] || user.username?.[0] || "?").toUpperCase();
      }

      // Name and username
      document.getElementById("display-name").textContent = user.name || `@${user.username}`;
      document.getElementById("username-badge").textContent = `@${user.username}`;

      // Bio
      if (user.bio) {
        document.getElementById("bio").textContent = user.bio;
        document.getElementById("bio").classList.remove("hidden");
      }

      // Stats
      document.getElementById("project-count").textContent = stats.publicProjects;
      document.getElementById("workflow-count").textContent = stats.publicWorkflows;
      document.getElementById("image-count").textContent = stats.publicImages;

      // Member since
      const joinDate = new Date(user.createdAt).toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
      });
      document.getElementById("member-since").textContent = `Member since ${joinDate}`;

      // Show content
      loadingEl.classList.add("hidden");
      contentEl.classList.remove("hidden");
    }

    async function fetchProjects() {
      const projectsLoading = document.getElementById("projects-loading");
      const projectsGrid = document.getElementById("projects-grid");
      const noProjects = document.getElementById("no-projects");

      try {
        const res = await fetch(`${API_URL}/api/users/${username}/projects`, {
          credentials: "include",
        });

        if (!res.ok) throw new Error("Failed to fetch projects");

        const data = await res.json();

        projectsLoading.classList.add("hidden");

        if (data.projects.length === 0) {
          noProjects.classList.remove("hidden");
          return;
        }

        projectsGrid.innerHTML = data.projects
          .map(
            (project) => `
          <div class="project-card">
            <div class="project-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
              </svg>
            </div>
            <div class="project-info">
              <h3 class="project-name">${escapeHtml(project.name)}</h3>
              ${project.description ? `<p class="project-description">${escapeHtml(project.description)}</p>` : ""}
            </div>
          </div>
        `
          )
          .join("");

        projectsGrid.classList.remove("hidden");
      } catch (err) {
        console.error("Failed to fetch projects:", err);
        projectsLoading.classList.add("hidden");
        noProjects.classList.remove("hidden");
      }
    }

    function escapeHtml(text) {
      const div = document.createElement("div");
      div.textContent = text;
      return div.innerHTML;
    }
  </script>
</MarketingLayout>

<style>
  .profile-page {
    min-height: 70vh;
    padding: 2rem 1.5rem 4rem;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .loading-state {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem;
  }

  .loading-spinner {
    width: 2rem;
    height: 2rem;
    border: 2px solid var(--sl-color-gray-5);
    border-top-color: rgb(13 148 136);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .error-state {
    text-align: center;
    padding: 4rem 1.5rem;
  }

  .error-state h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--sl-color-text);
    margin-bottom: 0.5rem;
  }

  .error-state p {
    color: var(--sl-color-gray-3);
    margin-bottom: 1.5rem;
  }

  .back-link-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: rgb(13 148 136);
    color: white;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
  }

  .back-link-btn:hover {
    background: rgb(15 118 110);
  }

  /* Profile Header */
  .profile-header {
    display: flex;
    gap: 2rem;
    padding: 2rem 0;
    border-bottom: 1px solid var(--sl-color-gray-5);
    margin-bottom: 2rem;
  }

  @media (max-width: 640px) {
    .profile-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1.5rem;
    }
  }

  .avatar-container {
    flex-shrink: 0;
  }

  .avatar-image,
  .avatar-fallback {
    width: 120px;
    height: 120px;
    border-radius: 50%;
  }

  .avatar-image {
    object-fit: cover;
  }

  .avatar-fallback {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgb(13 148 136), rgb(20 184 166));
    color: white;
    font-size: 3rem;
    font-weight: 700;
  }

  .profile-info {
    flex: 1;
  }

  .profile-name {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--sl-color-text);
    margin-bottom: 0.5rem;
  }

  .username-badge {
    font-size: 1rem;
    font-weight: normal;
    color: var(--sl-color-gray-3);
    margin-left: 0.5rem;
  }

  .bio {
    color: var(--sl-color-gray-2);
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  .profile-stats {
    display: flex;
    gap: 2rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 640px) {
    .profile-stats {
      justify-content: center;
    }
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--sl-color-text);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--sl-color-gray-3);
  }

  .member-since {
    font-size: 0.875rem;
    color: var(--sl-color-gray-4);
  }

  /* Projects Section */
  .projects-section {
    padding: 1rem 0;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--sl-color-text);
    margin-bottom: 1.5rem;
  }

  .projects-loading {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }

  .project-skeleton {
    height: 100px;
    background: var(--sl-color-gray-6);
    border-radius: 0.75rem;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }

  .project-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--sl-color-bg);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    transition: all 0.2s;
  }

  .project-card:hover {
    border-color: rgb(13 148 136);
  }

  .project-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgb(13 148 136 / 0.1);
    color: rgb(13 148 136);
    border-radius: 0.5rem;
    flex-shrink: 0;
  }

  .project-icon svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .project-info {
    flex: 1;
    min-width: 0;
  }

  .project-name {
    font-weight: 600;
    color: var(--sl-color-text);
    margin-bottom: 0.25rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .project-description {
    font-size: 0.875rem;
    color: var(--sl-color-gray-3);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .no-projects {
    text-align: center;
    padding: 3rem 1.5rem;
    color: var(--sl-color-gray-4);
    background: var(--sl-color-gray-6);
    border-radius: 0.75rem;
  }

  .hidden {
    display: none !important;
  }
</style>
