---
import MarketingLayout from '../layouts/MarketingLayout.astro';

const examples = [
  {
    title: 'Sales Dashboard',
    description: 'Bar chart with quarterly revenue data',
    generator: 'quickchart',
    category: 'Charts',
  },
  {
    title: 'User Growth',
    description: 'Line chart showing monthly active users',
    generator: 'quickchart',
    category: 'Charts',
  },
  {
    title: 'Market Share',
    description: 'Pie chart with competitor analysis',
    generator: 'quickchart',
    category: 'Charts',
  },
  {
    title: 'API Flow',
    description: 'Sequence diagram for REST endpoints',
    generator: 'mermaid',
    category: 'Diagrams',
  },
  {
    title: 'System Architecture',
    description: 'Microservices topology diagram',
    generator: 'mermaid',
    category: 'Diagrams',
  },
  {
    title: 'State Machine',
    description: 'Order processing state diagram',
    generator: 'mermaid',
    category: 'Diagrams',
  },
  {
    title: 'Event Registration',
    description: 'QR code linking to signup page',
    generator: 'qr',
    category: 'QR Codes',
  },
  {
    title: 'WiFi Access',
    description: 'QR code for network credentials',
    generator: 'qr',
    category: 'QR Codes',
  },
  {
    title: 'Force Graph',
    description: 'Network visualization with D3',
    generator: 'd3',
    category: 'Visualizations',
  },
  {
    title: 'Treemap',
    description: 'Hierarchical data visualization',
    generator: 'd3',
    category: 'Visualizations',
  },
  {
    title: 'Landing Page',
    description: 'Full-page website screenshot',
    generator: 'screenshot',
    category: 'Screenshots',
  },
  {
    title: 'Social Card',
    description: 'Open Graph image from HTML',
    generator: 'screenshot',
    category: 'Screenshots',
  },
];

const categories = [...new Set(examples.map(e => e.category))];
---

<MarketingLayout title="Gallery" description="Example images generated with floimg">
  <main>
    <!-- Hero -->
    <section class="bg-gradient-to-b from-violet-50 to-white py-16">
      <div class="max-w-6xl mx-auto px-6">
        <h1 class="text-4xl font-bold text-center mb-4">Gallery</h1>
        <p class="text-xl text-slate-600 text-center max-w-2xl mx-auto">
          Explore examples of images generated with floimg. Each example shows what's possible
          with our generators.
        </p>
      </div>
    </section>

    <!-- Filter tabs -->
    <section class="border-b sticky top-0 bg-white z-10">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex gap-1 overflow-x-auto py-4" id="category-tabs">
          <button
            class="category-tab px-4 py-2 rounded-full text-sm font-medium bg-violet-600 text-white"
            data-category="all"
          >
            All
          </button>
          {categories.map(category => (
            <button
              class="category-tab px-4 py-2 rounded-full text-sm font-medium bg-slate-100 text-slate-600 hover:bg-slate-200"
              data-category={category}
            >
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Gallery grid -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="gallery-grid">
          {examples.map(example => (
            <article
              class="gallery-item bg-white rounded-xl border overflow-hidden hover:shadow-lg transition-shadow"
              data-category={example.category}
            >
              <!-- Placeholder for generated image -->
              <div class="aspect-video bg-gradient-to-br from-slate-100 to-slate-200 flex items-center justify-center">
                <div class="text-center p-4">
                  <div class="w-12 h-12 mx-auto mb-2 rounded-lg bg-violet-100 flex items-center justify-center">
                    <span class="text-violet-600 text-xl">
                      {example.generator === 'quickchart' && 'üìä'}
                      {example.generator === 'mermaid' && 'üìê'}
                      {example.generator === 'qr' && 'üì±'}
                      {example.generator === 'd3' && 'üìà'}
                      {example.generator === 'screenshot' && 'üñºÔ∏è'}
                    </span>
                  </div>
                  <span class="text-xs text-slate-500">Generated with {example.generator}</span>
                </div>
              </div>
              <div class="p-4">
                <div class="flex items-start justify-between gap-2 mb-2">
                  <h3 class="font-semibold text-slate-900">{example.title}</h3>
                  <span class="text-xs px-2 py-1 rounded-full bg-slate-100 text-slate-600 whitespace-nowrap">
                    {example.category}
                  </span>
                </div>
                <p class="text-sm text-slate-600 mb-3">{example.description}</p>
                <button class="text-sm text-violet-600 hover:text-violet-700 font-medium">
                  View code ‚Üí
                </button>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-slate-50">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-2xl font-bold mb-4">Build Your Own</h2>
        <p class="text-slate-600 mb-8">
          Ready to create images like these? Get started with floimg in minutes.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/docs/getting-started/quick-start"
            class="px-6 py-3 bg-violet-600 text-white rounded-lg font-medium hover:bg-violet-700"
          >
            Quick Start Guide
          </a>
          <a
            href="https://studio.floimg.com"
            class="px-6 py-3 bg-white border border-slate-200 text-slate-700 rounded-lg font-medium hover:bg-slate-50"
          >
            Try floimg-studio
          </a>
        </div>
      </div>
    </section>
  </main>

  <script>
    // Category filtering
    const tabs = document.querySelectorAll('.category-tab');
    const items = document.querySelectorAll('.gallery-item');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const category = tab.dataset.category;

        // Update active tab
        tabs.forEach(t => {
          t.classList.remove('bg-violet-600', 'text-white');
          t.classList.add('bg-slate-100', 'text-slate-600');
        });
        tab.classList.remove('bg-slate-100', 'text-slate-600');
        tab.classList.add('bg-violet-600', 'text-white');

        // Filter items
        items.forEach(item => {
          if (category === 'all' || item.dataset.category === category) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  </script>
</MarketingLayout>
