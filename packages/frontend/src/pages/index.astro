---
import MarketingLayout from '../layouts/MarketingLayout.astro';

const features = [
  {
    title: "Unified API",
    description: "One interface for charts, diagrams, QR codes, screenshots, and AI images.",
    icon: "üîó",
  },
  {
    title: "Deterministic",
    description: "Same inputs, same outputs. Reliable workflows for production.",
    icon: "üéØ",
  },
  {
    title: "LLM-Ready",
    description: "MCP integration for Claude and other AI agents out of the box.",
    icon: "ü§ñ",
  },
  {
    title: "Self-Hostable",
    description: "Run anywhere. No vendor lock-in. MIT licensed.",
    icon: "üè†",
  },
];

const generators = [
  { name: "quickchart", desc: "Charts via Chart.js" },
  { name: "mermaid", desc: "Diagrams" },
  { name: "qr", desc: "QR codes" },
  { name: "d3", desc: "D3 visualizations" },
  { name: "screenshot", desc: "Playwright screenshots" },
  { name: "openai", desc: "DALL-E images" },
];
---

<MarketingLayout title="Home">
  <!-- Hero -->
  <section class="px-6 py-24 text-center">
    <div class="mx-auto max-w-4xl">
      <h1 class="text-5xl font-bold tracking-tight text-white sm:text-6xl">
        Image workflows for <span class="text-violet-400">developers</span> and <span class="text-violet-400">AI agents</span>
      </h1>
      <p class="mt-6 text-xl text-zinc-400">
        Generate charts, diagrams, QR codes, screenshots, and AI images with a unified API.
        Deterministic execution for reliable production workflows.
      </p>
      <div class="mt-10 flex items-center justify-center gap-4">
        <a href="/docs/getting-started/installation" class="rounded-lg bg-violet-600 px-6 py-3 text-lg font-medium text-white hover:bg-violet-500 transition-colors">
          Get Started
        </a>
        <a href="/gallery" class="rounded-lg border border-white/20 px-6 py-3 text-lg font-medium text-white hover:bg-white/5 transition-colors">
          View Gallery
        </a>
      </div>
    </div>
  </section>

  <!-- Code Example -->
  <section class="border-y border-white/10 bg-zinc-900/50 px-6 py-16">
    <div class="mx-auto max-w-4xl">
      <pre class="overflow-x-auto rounded-lg bg-zinc-950 p-6 text-sm"><code class="text-zinc-300"><span class="text-violet-400">import</span> createClient <span class="text-violet-400">from</span> <span class="text-green-400">'@teamflojo/floimg'</span>;
<span class="text-violet-400">import</span> quickchart <span class="text-violet-400">from</span> <span class="text-green-400">'@teamflojo/floimg-quickchart'</span>;

<span class="text-violet-400">const</span> floimg = createClient();
floimg.registerGenerator(quickchart());

<span class="text-zinc-500">// Generate a chart</span>
<span class="text-violet-400">const</span> chart = <span class="text-violet-400">await</span> floimg.generate({'{'}
  generator: <span class="text-green-400">'quickchart'</span>,
  params: {'{'} type: <span class="text-green-400">'bar'</span>, data: {'{'} <span class="text-zinc-500">/* Chart.js config */</span> {'}'} {'}'}
{'}'});

<span class="text-zinc-500">// Transform it</span>
<span class="text-violet-400">const</span> resized = <span class="text-violet-400">await</span> floimg.transform(chart, {'{'}
  op: <span class="text-green-400">'resize'</span>,
  params: {'{'} width: <span class="text-amber-400">800</span> {'}'}
{'}'});

<span class="text-zinc-500">// Save to S3</span>
<span class="text-violet-400">await</span> floimg.save(resized, <span class="text-green-400">'s3://bucket/chart.png'</span>);</code></pre>
    </div>
  </section>

  <!-- Features -->
  <section class="px-6 py-24">
    <div class="mx-auto max-w-7xl">
      <h2 class="text-center text-3xl font-bold text-white">Why floimg?</h2>
      <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {features.map((feature) => (
          <div class="rounded-lg border border-white/10 bg-zinc-900/50 p-6">
            <div class="text-3xl">{feature.icon}</div>
            <h3 class="mt-4 text-lg font-semibold text-white">{feature.title}</h3>
            <p class="mt-2 text-sm text-zinc-400">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Generators -->
  <section class="border-t border-white/10 bg-zinc-900/50 px-6 py-24">
    <div class="mx-auto max-w-7xl">
      <h2 class="text-center text-3xl font-bold text-white">Generators</h2>
      <p class="mt-4 text-center text-zinc-400">Install only what you need</p>
      <div class="mt-12 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {generators.map((gen) => (
          <div class="flex items-center gap-4 rounded-lg border border-white/10 bg-zinc-950 p-4">
            <code class="text-sm text-violet-400">@teamflojo/floimg-{gen.name}</code>
            <span class="text-sm text-zinc-500">{gen.desc}</span>
          </div>
        ))}
      </div>
      <div class="mt-8 text-center">
        <a href="/docs/plugins/quickchart" class="text-violet-400 hover:text-violet-300 transition-colors">
          View all plugins ‚Üí
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="px-6 py-24">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="text-3xl font-bold text-white">Ready to start?</h2>
      <p class="mt-4 text-zinc-400">
        Install floimg and generate your first image in minutes.
      </p>
      <div class="mt-8">
        <code class="rounded-lg bg-zinc-900 px-4 py-2 text-violet-400">
          npm install @teamflojo/floimg
        </code>
      </div>
      <div class="mt-8 flex items-center justify-center gap-4">
        <a href="/docs/getting-started/installation" class="rounded-lg bg-violet-600 px-6 py-3 font-medium text-white hover:bg-violet-500 transition-colors">
          Read the Docs
        </a>
        <a href="https://github.com/floimg/floimg" class="rounded-lg border border-white/20 px-6 py-3 font-medium text-white hover:bg-white/5 transition-colors" target="_blank" rel="noopener noreferrer">
          Star on GitHub
        </a>
      </div>
    </div>
  </section>
</MarketingLayout>
