---
import MarketingLayout from "../layouts/MarketingLayout.astro";
import ImageShowcase from "../components/ImageShowcase.astro";
import TabbedDemo from "../components/TabbedDemo.astro";
import TemplateHighlights from "../components/TemplateHighlights.astro";
import ShowcasePreview from "../components/ShowcasePreview.astro";
import GitHubStars from "../components/GitHubStars.astro";

// Streamlined features: 6 cards in 3x2 grid (removed Generators category - covered in templates/plugins)
const features = [
  {
    title: "AI Image Generation",
    description: "Generate images with DALL-E and other AI models via a unified API.",
    icon: "üé®",
    link: "/docs/plugins/openai",
  },
  {
    title: "Deterministic Transforms",
    description: "Same inputs, same outputs. Reliable execution for production.",
    icon: "üéØ",
    link: "/docs/getting-started/concepts",
  },
  {
    title: "Pipeline Engine",
    description: "Chain generators and transforms into reusable, shareable workflows.",
    icon: "‚ö°",
    link: "/docs/getting-started/concepts",
  },
  {
    title: "LLM-Ready",
    description: "MCP integration for Claude and other AI agents out of the box.",
    icon: "ü§ñ",
    link: "/docs/mcp",
  },
  {
    title: "Self-Hostable",
    description: "Run anywhere. No vendor lock-in. MIT licensed.",
    icon: "üè†",
    link: "/docs/studio/self-hosting",
  },
  {
    title: "TypeScript First",
    description: "Full type safety with excellent IDE support.",
    icon: "üíª",
    link: "/docs/sdk/fluent",
  },
];
---

<MarketingLayout title="Home">
  <!-- Hero Section with Image Showcase -->
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-badges">
        <span class="open-source-badge">
          <svg
            class="badge-icon"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
          </svg>
          Open Source
        </span>
        <GitHubStars repo="TeamFlojo/floimg" />
      </div>

      <h1 class="hero-title">
        The composable <span class="highlight">image workflow engine</span>
      </h1>

      <p class="hero-subtitle">
        Generate with AI. Transform with precision. Save anywhere. All in one pipeline.
      </p>

      <div class="hero-ctas">
        <a href="https://studio.floimg.com" class="cta-primary"> Try Studio </a>
        <a href="/docs" class="cta-secondary"> Read the Docs </a>
      </div>

      <ImageShowcase class="hero-showcase" />
      <p class="showcase-caption">
        <a href="/templates" class="caption-link">Browse workflow templates ‚Üí</a>
      </p>
    </div>
  </section>

  <!-- Tabbed Demo Section -->
  <section class="demo-section">
    <div class="section-container">
      <h2 class="section-title">See It in Action</h2>
      <p class="section-subtitle">Choose your use case</p>
      <TabbedDemo />
    </div>
  </section>

  <!-- FloImg Studio Section -->
  <section class="studio-section">
    <div class="studio-container">
      <div class="studio-content">
        <span class="studio-eyebrow">FloImg Studio</span>
        <h2 class="studio-title">Build workflows visually</h2>
        <p class="studio-description">
          Drag-and-drop node editor for composing AI generation, transforms, and cloud saves. Export
          to code when ready.
        </p>
        <ul class="studio-features">
          <li><span class="check-icon">&#10003;</span> No installation required</li>
          <li><span class="check-icon">&#10003;</span> AI providers included</li>
          <li><span class="check-icon">&#10003;</span> Export to SDK code</li>
          <li><span class="check-icon">&#10003;</span> Self-hostable (MIT)</li>
        </ul>
        <div class="studio-ctas">
          <a href="https://studio.floimg.com" class="studio-cta-primary">Try Studio</a>
          <a href="/docs/studio/self-hosting" class="studio-cta-secondary">Self-Host Guide</a>
        </div>
      </div>
      <div class="studio-visual">
        <img
          src="/showcase/studio-workflow.png"
          alt="FloImg Studio workflow editor showing an AI image generation pipeline"
          loading="lazy"
        />
      </div>
    </div>
  </section>

  <!-- Template Highlights -->
  <TemplateHighlights />

  <!-- Features Grid -->
  <section class="features-section">
    <div class="features-container">
      <h2 class="section-title">Why FloImg?</h2>
      <div class="features-grid">
        {
          features.map((feature) => (
            <a href={feature.link} class="feature-card">
              <span class="feature-icon">{feature.icon}</span>
              <h4 class="feature-title">{feature.title}</h4>
              <p class="feature-description">{feature.description}</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Community Showcase Preview -->
  <ShowcasePreview />

  <!-- Quick Start CTA -->
  <section class="cta-section">
    <div class="section-container">
      <h2 class="cta-title">Ready to start?</h2>
      <p class="cta-description">
        Transform your first image in seconds ‚Äî no installation required.
      </p>
      <div class="cta-code">
        <code>npx @teamflojo/floimg resize hero.png 1200x630 -o og-image.png</code>
      </div>
      <div class="cta-buttons">
        <a href="/docs/cli" class="cta-primary">CLI Reference</a>
        <a href="/docs/getting-started/quick-start" class="cta-secondary">Quick Start</a>
      </div>
    </div>
  </section>
</MarketingLayout>

<style>
  /* Hero Section */
  .hero-section {
    padding: 4rem 1.5rem 6rem;
    text-align: center;
  }

  .hero-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .hero-badges {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .open-source-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    background: rgb(34 197 94 / 0.1);
    border: 1px solid rgb(34 197 94 / 0.3);
    border-radius: 0.5rem;
    color: rgb(34 197 94);
    font-size: 0.875rem;
    font-weight: 500;
  }

  :global(.dark) .open-source-badge {
    background: rgb(34 197 94 / 0.15);
    color: rgb(74 222 128);
  }

  .badge-icon {
    width: 1rem;
    height: 1rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.75rem);
    font-weight: 700;
    line-height: 1.1;
    color: #18181b;
    margin-bottom: 1.5rem;
  }

  :global(html.dark) .hero-title {
    color: #fafafa;
  }

  .highlight {
    color: rgb(13 148 136);
  }

  :global(.dark) .highlight {
    color: rgb(45 212 191);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #52525b;
    max-width: 700px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  :global(.dark) .hero-subtitle {
    color: #a1a1aa;
  }

  .hero-ctas {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 4rem;
    flex-wrap: wrap;
  }

  .cta-primary {
    padding: 0.875rem 1.75rem;
    background: rgb(13 148 136);
    color: white;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.2s;
  }

  .cta-primary:hover {
    background: rgb(15 118 110);
  }

  .cta-secondary {
    padding: 0.875rem 1.75rem;
    background: transparent;
    border: 1px solid #d4d4d8;
    color: #18181b;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }

  :global(.dark) .cta-secondary {
    border-color: #3f3f46;
    color: #fafafa;
  }

  .cta-secondary:hover {
    background: #f4f4f5;
  }

  :global(.dark) .cta-secondary:hover {
    background: #27272a;
  }

  .hero-showcase {
    margin-top: 2rem;
  }

  .showcase-caption {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.875rem;
    color: #71717a;
  }

  .caption-link {
    color: rgb(13 148 136);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .caption-link:hover {
    color: rgb(15 118 110);
    text-decoration: underline;
  }

  :global(.dark) .caption-link {
    color: rgb(45 212 191);
  }

  :global(.dark) .caption-link:hover {
    color: rgb(94 234 212);
  }

  /* Demo Section - always dark background */
  .demo-section {
    padding: 5rem 1.5rem;
    background: #18181b;
    border-top: 1px solid #27272a;
    border-bottom: 1px solid #27272a;
  }

  .demo-section .section-title {
    color: #fafafa;
  }

  .demo-section .section-subtitle {
    color: #a1a1aa;
  }

  /* Studio Section */
  .studio-section {
    padding: 5rem 1.5rem;
    background: #f4f4f5;
    border-top: 1px solid #e4e4e7;
    border-bottom: 1px solid #e4e4e7;
  }

  :global(.dark) .studio-section {
    background: #09090b;
    border-top-color: #27272a;
    border-bottom-color: #27272a;
  }

  .studio-container {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    align-items: center;
  }

  @media (max-width: 900px) {
    .studio-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .studio-visual {
      order: -1;
    }
  }

  .studio-eyebrow {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgb(13 148 136);
    margin-bottom: 0.75rem;
  }

  :global(.dark) .studio-eyebrow {
    color: rgb(45 212 191);
  }

  .studio-title {
    font-size: 2rem;
    font-weight: 700;
    color: #18181b;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  :global(.dark) .studio-title {
    color: #fafafa;
  }

  .studio-description {
    color: #52525b;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  :global(.dark) .studio-description {
    color: #a1a1aa;
  }

  .studio-features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
  }

  .studio-features li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #52525b;
    font-size: 0.95rem;
    padding: 0.375rem 0;
  }

  :global(.dark) .studio-features li {
    color: #a1a1aa;
  }

  .check-icon {
    color: rgb(13 148 136);
    font-weight: 600;
  }

  :global(.dark) .check-icon {
    color: rgb(45 212 191);
  }

  .studio-ctas {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .studio-cta-primary {
    padding: 0.75rem 1.5rem;
    background: rgb(13 148 136);
    color: white;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.2s;
  }

  .studio-cta-primary:hover {
    background: rgb(15 118 110);
  }

  .studio-cta-secondary {
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: 1px solid #d4d4d8;
    color: #18181b;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }

  :global(.dark) .studio-cta-secondary {
    border-color: #3f3f46;
    color: #fafafa;
  }

  .studio-cta-secondary:hover {
    background: #e4e4e7;
  }

  :global(.dark) .studio-cta-secondary:hover {
    background: #27272a;
  }

  .studio-visual {
    position: relative;
  }

  .studio-visual img {
    width: 100%;
    height: auto;
    border-radius: 0.75rem;
    box-shadow:
      0 20px 25px -5px rgb(0 0 0 / 0.1),
      0 8px 10px -6px rgb(0 0 0 / 0.1);
    border: 1px solid #e4e4e7;
  }

  :global(.dark) .studio-visual img {
    border-color: #27272a;
    box-shadow:
      0 20px 25px -5px rgb(0 0 0 / 0.3),
      0 8px 10px -6px rgb(0 0 0 / 0.2);
  }

  .section-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #18181b;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  :global(.dark) .section-title {
    color: #fafafa;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #52525b;
    text-align: center;
    margin-bottom: 3rem;
  }

  :global(.dark) .section-subtitle {
    color: #a1a1aa;
  }

  /* Features Section - subtle gray accent for visual variety */
  .features-section {
    padding: 5rem 1.5rem;
    background: #fafafa;
    border-top: 1px solid #e4e4e7;
    border-bottom: 1px solid #e4e4e7;
  }

  :global(.dark) .features-section {
    background: #0a0a0a;
    border-top-color: #27272a;
    border-bottom-color: #27272a;
  }

  .features-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
  }

  @media (max-width: 900px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  .feature-card {
    display: block;
    text-decoration: none;
    cursor: pointer;
    padding: 1.25rem;
    background: white;
    border: 1px solid #e4e4e7;
    border-radius: 0.75rem;
    transition: all 0.2s ease;
  }

  .feature-card:hover {
    border-color: rgb(13 148 136);
    transform: translateY(-2px);
  }

  :global(.dark) .feature-card {
    background: #18181b;
    border-color: #27272a;
  }

  :global(.dark) .feature-card:hover {
    border-color: rgb(45 212 191);
  }

  .feature-icon {
    font-size: 1.5rem;
    display: block;
    margin-bottom: 0.75rem;
  }

  .feature-title {
    font-size: 1rem;
    font-weight: 600;
    color: #18181b;
    margin-bottom: 0.5rem;
  }

  :global(.dark) .feature-title {
    color: #fafafa;
  }

  .feature-description {
    font-size: 0.875rem;
    color: #52525b;
    line-height: 1.5;
    margin: 0;
  }

  :global(.dark) .feature-description {
    color: #a1a1aa;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 1.5rem;
    text-align: center;
    border-top: 1px solid #e4e4e7;
  }

  :global(.dark) .cta-section {
    border-top-color: #27272a;
  }

  .cta-title {
    font-size: 2rem;
    font-weight: 700;
    color: #18181b;
    margin-bottom: 0.75rem;
  }

  :global(.dark) .cta-title {
    color: #fafafa;
  }

  .cta-description {
    color: #52525b;
    margin-bottom: 1.5rem;
  }

  :global(.dark) .cta-description {
    color: #a1a1aa;
  }

  .cta-code {
    display: inline-block;
    padding: 0.75rem 1.25rem;
    background: var(--m-code-bg, #1e1e2e);
    border: 1px solid var(--m-code-border, #3f3f46);
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  .cta-code code {
    color: rgb(74 222 128);
    background: transparent;
    padding: 0;
    font-size: 0.9rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }

  .cta-buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
</style>
