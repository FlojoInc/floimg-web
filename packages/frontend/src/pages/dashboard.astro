---
import MarketingLayout from "../layouts/MarketingLayout.astro";

const API_URL = import.meta.env.PUBLIC_API_URL || "https://api.floimg.com";
---

<MarketingLayout title="Dashboard">
  <div class="min-h-[70vh] px-6 py-12">
    <div class="mx-auto max-w-4xl">
      <!-- Loading state -->
      <div id="loading" class="flex items-center justify-center py-24">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-teal-600"></div>
      </div>

      <!-- Not authenticated state -->
      <div id="not-authenticated" class="hidden text-center py-24">
        <h1 class="text-2xl font-bold text-zinc-900 dark:text-white mb-4">Please sign in</h1>
        <p class="text-zinc-600 dark:text-zinc-400 mb-6">
          You need to be signed in to view the dashboard.
        </p>
        <a
          href="/login"
          class="inline-block rounded-lg bg-teal-600 px-6 py-3 font-medium text-white hover:bg-teal-500 transition-colors"
        >
          Sign in
        </a>
      </div>

      <!-- Authenticated state -->
      <div id="authenticated" class="hidden">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h1 class="text-3xl font-bold text-zinc-900 dark:text-white">Dashboard</h1>
            <p class="mt-1 text-zinc-600 dark:text-zinc-400">
              Welcome back, <span id="user-name" class="font-medium"></span>
            </p>
          </div>
          <button
            id="logout-btn"
            class="rounded-lg border border-zinc-300 dark:border-white/20 px-4 py-2 text-sm font-medium text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-white/5 transition-colors"
          >
            Sign out
          </button>
        </div>

        <!-- User info card -->
        <div class="card mb-6">
          <h2 class="text-lg font-semibold text-zinc-900 dark:text-white mb-4">Account</h2>
          <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <dt class="text-sm text-zinc-500 dark:text-zinc-400">Email</dt>
              <dd id="user-email" class="text-zinc-900 dark:text-white font-medium"></dd>
            </div>
            <div>
              <dt class="text-sm text-zinc-500 dark:text-zinc-400">Plan</dt>
              <dd>
                <span
                  id="user-tier"
                  class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium capitalize"
                ></span>
              </dd>
            </div>
            <div>
              <dt class="text-sm text-zinc-500 dark:text-zinc-400">Member since</dt>
              <dd id="user-created" class="text-zinc-900 dark:text-white"></dd>
            </div>
            <div>
              <dt class="text-sm text-zinc-500 dark:text-zinc-400">Email verified</dt>
              <dd id="user-verified" class="text-zinc-900 dark:text-white"></dd>
            </div>
          </dl>
        </div>

        <!-- Quick actions -->
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <a
            href="https://studio.floimg.com"
            class="card hover:border-teal-500/50 transition-colors group"
          >
            <div class="flex items-center gap-3 mb-2">
              <div
                class="flex items-center justify-center w-10 h-10 rounded-lg bg-teal-100 dark:bg-teal-900/30 text-teal-600 dark:text-teal-400"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"
                  ></path>
                </svg>
              </div>
              <h3
                class="font-semibold text-zinc-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors"
              >
                Open Studio
              </h3>
            </div>
            <p class="text-sm text-zinc-600 dark:text-zinc-400">
              Build image workflows with the visual editor
            </p>
          </a>

          <a href="/docs" class="card hover:border-teal-500/50 transition-colors group">
            <div class="flex items-center gap-3 mb-2">
              <div
                class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path>
                </svg>
              </div>
              <h3
                class="font-semibold text-zinc-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors"
              >
                Documentation
              </h3>
            </div>
            <p class="text-sm text-zinc-600 dark:text-zinc-400">Learn how to use FloImg</p>
          </a>

          <a href="/templates" class="card hover:border-teal-500/50 transition-colors group">
            <div class="flex items-center gap-3 mb-2">
              <div
                class="flex items-center justify-center w-10 h-10 rounded-lg bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <h3
                class="font-semibold text-zinc-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors"
              >
                Templates
              </h3>
            </div>
            <p class="text-sm text-zinc-600 dark:text-zinc-400">Browse community workflows</p>
          </a>
        </div>
      </div>
    </div>
  </div>
</MarketingLayout>

<script define:vars={{ API_URL }}>
  const loading = document.getElementById("loading");
  const notAuthenticated = document.getElementById("not-authenticated");
  const authenticated = document.getElementById("authenticated");

  async function checkAuth() {
    try {
      const res = await fetch(`${API_URL}/api/auth/me`, {
        credentials: "include",
      });

      if (!res.ok) {
        throw new Error("Not authenticated");
      }

      const data = await res.json();
      const user = data.user;

      // Update UI with user data
      document.getElementById("user-name").textContent = user.name || user.email.split("@")[0];
      document.getElementById("user-email").textContent = user.email;

      const tierBadge = document.getElementById("user-tier");
      tierBadge.textContent = user.tier;
      tierBadge.className = `inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium capitalize ${
        user.tier === "free"
          ? "bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300"
          : user.tier === "starter"
            ? "bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300"
            : user.tier === "pro"
              ? "bg-teal-100 dark:bg-teal-900/30 text-teal-700 dark:text-teal-300"
              : "bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300"
      }`;

      document.getElementById("user-created").textContent = new Date(
        user.createdAt
      ).toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      });

      document.getElementById("user-verified").textContent = user.emailVerifiedAt
        ? new Date(user.emailVerifiedAt).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        : "Not verified";

      // Show authenticated state
      loading.classList.add("hidden");
      authenticated.classList.remove("hidden");

      // Setup logout handler
      document.getElementById("logout-btn").addEventListener("click", async () => {
        await fetch(`${API_URL}/api/auth/logout`, {
          method: "POST",
          credentials: "include",
        });
        window.location.href = "/";
      });
    } catch (error) {
      // Show not authenticated state
      loading.classList.add("hidden");
      notAuthenticated.classList.remove("hidden");
    }
  }

  checkAuth();
</script>
