---
import MarketingLayout from "../../layouts/MarketingLayout.astro";

const API_URL = import.meta.env.PUBLIC_API_URL || "https://api.floimg.com";
const STUDIO_URL = import.meta.env.PUBLIC_STUDIO_URL || "https://studio.floimg.com";
---

<MarketingLayout title="Showcase" description="View community-created image and workflow details.">
  <main class="showcase-detail">
    <div class="container">
      <!-- Loading state -->
      <div id="loading" class="loading-state">
        <div class="loading-spinner"></div>
      </div>

      <!-- Error state -->
      <div id="error-state" class="error-state hidden">
        <h1>Item Not Found</h1>
        <p>This showcase item may have been removed or doesn't exist.</p>
        <a href="/showcase" class="back-link-btn">Back to Showcase</a>
      </div>

      <!-- Content -->
      <div id="content" class="hidden">
        <!-- Back link -->
        <a href="/showcase" class="back-link">
          <svg class="back-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Showcase
        </a>

        <div class="detail-grid">
          <!-- Image section -->
          <div class="image-section">
            <div class="image-container">
              <img id="item-image" src="" alt="" class="main-image" />
            </div>
          </div>

          <!-- Info section -->
          <div class="info-section">
            <h1 id="item-title" class="item-title"></h1>

            <!-- Author -->
            <div class="author-section">
              <a id="author-link" href="#" class="author-link">
                <span id="author-avatar" class="author-avatar"></span>
                <span id="author-name" class="author-name"></span>
              </a>
              <span id="item-time" class="item-time"></span>
            </div>

            <!-- Stats -->
            <div class="stats-row">
              <button id="like-btn" class="stat-btn">
                <svg
                  id="like-icon"
                  class="stat-icon"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  ></path>
                </svg>
                <span id="like-count">0</span>
              </button>
              <span class="stat">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  ></path>
                </svg>
                <span id="view-count">0</span>
              </span>
              <span class="stat">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
                  ></path>
                </svg>
                <span id="comment-count">0</span>
              </span>
            </div>

            <!-- Description -->
            <div id="description-section" class="description-section hidden">
              <p id="item-description"></p>
            </div>

            <!-- Category & Tags -->
            <div id="meta-section" class="meta-section hidden">
              <div id="category-badge" class="category-badge hidden"></div>
              <div id="tags-container" class="tags-container hidden"></div>
            </div>

            <!-- Workflow button -->
            <div id="workflow-section" class="workflow-section hidden">
              <a id="workflow-btn" href="#" class="workflow-button">
                <svg class="workflow-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"
                  ></path>
                </svg>
                Open Workflow in Studio
              </a>
            </div>
          </div>
        </div>

        <!-- Comments section -->
        <div class="comments-section">
          <h2 class="comments-title">
            Comments
            <span id="comments-count-badge" class="comments-count">(0)</span>
          </h2>

          <!-- Comment form -->
          <div id="comment-form-section" class="comment-form-section">
            <textarea
              id="comment-input"
              class="comment-input"
              placeholder="Add a comment..."
              maxlength="1000"></textarea>
            <div class="comment-form-actions">
              <span id="comment-char-count" class="char-count">0/1000</span>
              <button id="submit-comment-btn" class="submit-comment-btn" disabled>
                Post Comment
              </button>
            </div>
          </div>

          <!-- Comments list -->
          <div id="comments-list" class="comments-list"></div>
          <div id="no-comments" class="no-comments hidden">
            <p>No comments yet. Be the first to comment!</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script define:vars={{ API_URL, STUDIO_URL }}>
    const loadingEl = document.getElementById("loading");
    const errorEl = document.getElementById("error-state");
    const contentEl = document.getElementById("content");

    // Get ID from query param
    const params = new URLSearchParams(window.location.search);
    const id = params.get("id");

    let itemData = null;
    let isLiked = false;

    if (!id) {
      loadingEl.classList.add("hidden");
      errorEl.classList.remove("hidden");
    } else {
      fetchItem();
    }

    function formatRelativeTime(dateStr) {
      const date = new Date(dateStr);
      const now = new Date();
      const diffMs = now - date;
      const diffSec = Math.floor(diffMs / 1000);
      const diffMin = Math.floor(diffSec / 60);
      const diffHour = Math.floor(diffMin / 60);
      const diffDay = Math.floor(diffHour / 24);

      if (diffDay > 30)
        return date.toLocaleDateString("en-US", {
          year: "numeric",
          month: "short",
          day: "numeric",
        });
      if (diffDay > 0) return `${diffDay} day${diffDay > 1 ? "s" : ""} ago`;
      if (diffHour > 0) return `${diffHour} hour${diffHour > 1 ? "s" : ""} ago`;
      if (diffMin > 0) return `${diffMin} minute${diffMin > 1 ? "s" : ""} ago`;
      return "just now";
    }

    async function fetchItem() {
      try {
        const res = await fetch(`${API_URL}/api/showcase/${id}`, {
          credentials: "include",
        });

        if (!res.ok) throw new Error("Not found");

        const data = await res.json();
        itemData = data.item;
        isLiked = itemData.isLiked;
        renderItem();
        fetchComments();
      } catch (err) {
        console.error("Failed to fetch item:", err);
        loadingEl.classList.add("hidden");
        errorEl.classList.remove("hidden");
      }
    }

    function renderItem() {
      const item = itemData;
      const imageUrl = `${API_URL}/api/storage/images/${item.image.id}/content`;

      // Update page title
      document.title = `${item.title} - FloImg Showcase`;

      // Image
      const img = document.getElementById("item-image");
      img.src = imageUrl;
      img.alt = item.title;

      // Title
      document.getElementById("item-title").textContent = item.title;

      // Author
      const authorLink = document.getElementById("author-link");
      authorLink.href = item.user.username ? `/profile?username=${item.user.username}` : "#";
      document.getElementById("author-avatar").textContent =
        item.user.name?.[0]?.toUpperCase() || item.user.username?.[0]?.toUpperCase() || "?";
      document.getElementById("author-name").textContent =
        item.user.name || item.user.username || "Anonymous";

      // Time
      document.getElementById("item-time").textContent = formatRelativeTime(item.createdAt);

      // Stats
      document.getElementById("like-count").textContent = item.likeCount;
      document.getElementById("view-count").textContent = item.viewCount;
      document.getElementById("comment-count").textContent = item.commentCount;
      document.getElementById("comments-count-badge").textContent = `(${item.commentCount})`;

      // Like state
      const likeBtn = document.getElementById("like-btn");
      const likeIcon = document.getElementById("like-icon");
      if (isLiked) {
        likeBtn.classList.add("liked");
        likeIcon.setAttribute("fill", "currentColor");
      }

      // Description
      if (item.description) {
        document.getElementById("item-description").textContent = item.description;
        document.getElementById("description-section").classList.remove("hidden");
      }

      // Category & Tags
      const metaSection = document.getElementById("meta-section");
      if (item.category || (item.tags && item.tags.length > 0)) {
        metaSection.classList.remove("hidden");

        if (item.category) {
          const categoryBadge = document.getElementById("category-badge");
          categoryBadge.textContent = item.category.replace("-", " ");
          categoryBadge.classList.remove("hidden");
        }

        if (item.tags && item.tags.length > 0) {
          const tagsContainer = document.getElementById("tags-container");
          tagsContainer.innerHTML = item.tags
            .map((tag) => `<span class="tag">#${tag}</span>`)
            .join("");
          tagsContainer.classList.remove("hidden");
        }
      }

      // Workflow
      if (item.workflowShared && item.workflowId) {
        const workflowSection = document.getElementById("workflow-section");
        const workflowBtn = document.getElementById("workflow-btn");
        workflowBtn.href = `${STUDIO_URL}?workflow=${item.workflowId}`;
        workflowSection.classList.remove("hidden");
      }

      // Show content
      loadingEl.classList.add("hidden");
      contentEl.classList.remove("hidden");
    }

    async function fetchComments() {
      try {
        const res = await fetch(`${API_URL}/api/showcase/${id}/comments`, {
          credentials: "include",
        });

        if (!res.ok) return;

        const data = await res.json();
        renderComments(data.comments);
      } catch (err) {
        console.error("Failed to fetch comments:", err);
      }
    }

    function renderComments(comments) {
      const listEl = document.getElementById("comments-list");
      const noCommentsEl = document.getElementById("no-comments");

      if (comments.length === 0) {
        listEl.innerHTML = "";
        noCommentsEl.classList.remove("hidden");
        return;
      }

      noCommentsEl.classList.add("hidden");
      listEl.innerHTML = comments
        .map(
          (comment) => `
        <div class="comment" data-id="${comment.id}">
          <div class="comment-header">
            <a href="${comment.user.username ? `/profile?username=${comment.user.username}` : "#"}" class="comment-author">
              <span class="author-avatar">${comment.user.name?.[0]?.toUpperCase() || comment.user.username?.[0]?.toUpperCase() || "?"}</span>
              <span class="author-name">${comment.user.name || comment.user.username || "Anonymous"}</span>
            </a>
            <span class="comment-time">${formatRelativeTime(comment.createdAt)}</span>
          </div>
          <p class="comment-content">${escapeHtml(comment.content)}</p>
        </div>
      `
        )
        .join("");
    }

    function escapeHtml(text) {
      const div = document.createElement("div");
      div.textContent = text;
      return div.innerHTML;
    }

    // Like handler
    document.getElementById("like-btn").addEventListener("click", async () => {
      try {
        const res = await fetch(`${API_URL}/api/showcase/${id}/like`, {
          method: "POST",
          credentials: "include",
        });

        if (res.status === 401) {
          window.location.href = `/login?return=${encodeURIComponent(window.location.href)}`;
          return;
        }

        if (!res.ok) throw new Error("Failed to like");

        const data = await res.json();
        isLiked = data.liked;
        document.getElementById("like-count").textContent = data.likeCount;

        const likeBtn = document.getElementById("like-btn");
        const likeIcon = document.getElementById("like-icon");
        likeBtn.classList.toggle("liked", isLiked);
        likeIcon.setAttribute("fill", isLiked ? "currentColor" : "none");
      } catch (err) {
        console.error("Failed to toggle like:", err);
      }
    });

    // Comment form
    const commentInput = document.getElementById("comment-input");
    const charCount = document.getElementById("comment-char-count");
    const submitBtn = document.getElementById("submit-comment-btn");

    commentInput.addEventListener("input", () => {
      const len = commentInput.value.length;
      charCount.textContent = `${len}/1000`;
      submitBtn.disabled = len === 0 || len > 1000;
    });

    submitBtn.addEventListener("click", async () => {
      const content = commentInput.value.trim();
      if (!content) return;

      submitBtn.disabled = true;
      submitBtn.textContent = "Posting...";

      try {
        const res = await fetch(`${API_URL}/api/showcase/${id}/comments`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          credentials: "include",
          body: JSON.stringify({ content }),
        });

        if (res.status === 401) {
          window.location.href = `/login?return=${encodeURIComponent(window.location.href)}`;
          return;
        }

        if (!res.ok) throw new Error("Failed to post comment");

        commentInput.value = "";
        charCount.textContent = "0/1000";
        fetchComments();

        // Update count
        const countEl = document.getElementById("comment-count");
        const badgeEl = document.getElementById("comments-count-badge");
        const newCount = parseInt(countEl.textContent) + 1;
        countEl.textContent = newCount;
        badgeEl.textContent = `(${newCount})`;
      } catch (err) {
        console.error("Failed to post comment:", err);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = "Post Comment";
      }
    });
  </script>
</MarketingLayout>

<style>
  .showcase-detail {
    min-height: 70vh;
    padding: 2rem 1.5rem 4rem;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .loading-state {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem;
  }

  .loading-spinner {
    width: 2rem;
    height: 2rem;
    border: 2px solid var(--sl-color-gray-5);
    border-top-color: rgb(13 148 136);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .error-state {
    text-align: center;
    padding: 4rem 1.5rem;
  }

  .error-state h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--sl-color-text);
    margin-bottom: 0.5rem;
  }

  .error-state p {
    color: var(--sl-color-gray-3);
    margin-bottom: 1.5rem;
  }

  .back-link-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: rgb(13 148 136);
    color: white;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
  }

  .back-link-btn:hover {
    background: rgb(15 118 110);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--sl-color-gray-3);
    text-decoration: none;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: rgb(13 148 136);
  }

  .back-icon {
    width: 1rem;
    height: 1rem;
  }

  .detail-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    .detail-grid {
      grid-template-columns: 1fr;
    }
  }

  .image-section {
    position: sticky;
    top: 2rem;
    align-self: start;
  }

  .image-container {
    background: var(--sl-color-gray-6);
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .main-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .info-section {
    padding: 1rem 0;
  }

  .item-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--sl-color-text);
    margin-bottom: 1rem;
  }

  .author-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .author-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .author-avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: var(--sl-color-gray-5);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--sl-color-gray-3);
  }

  .author-name {
    font-weight: 500;
    color: var(--sl-color-text);
  }

  .item-time {
    font-size: 0.875rem;
    color: var(--sl-color-gray-4);
  }

  .stats-row {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem 0;
    border-top: 1px solid var(--sl-color-gray-5);
    border-bottom: 1px solid var(--sl-color-gray-5);
    margin-bottom: 1rem;
  }

  .stat,
  .stat-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--sl-color-gray-3);
  }

  .stat-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    margin: -0.5rem;
    border-radius: 0.375rem;
    transition: all 0.2s;
  }

  .stat-btn:hover {
    background: var(--sl-color-gray-6);
  }

  .stat-btn.liked {
    color: rgb(239 68 68);
  }

  .stat-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  .description-section {
    margin-bottom: 1rem;
  }

  .description-section p {
    color: var(--sl-color-gray-2);
    line-height: 1.6;
    white-space: pre-wrap;
  }

  .meta-section {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .category-badge {
    padding: 0.25rem 0.75rem;
    background: rgb(13 148 136 / 0.1);
    color: rgb(13 148 136);
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 9999px;
    text-transform: capitalize;
  }

  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.25rem 0.5rem;
    background: var(--sl-color-gray-6);
    color: var(--sl-color-gray-3);
    font-size: 0.75rem;
    border-radius: 0.25rem;
  }

  .workflow-section {
    margin-top: 1.5rem;
  }

  .workflow-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: rgb(13 148 136);
    color: white;
    font-weight: 500;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: background 0.2s;
  }

  .workflow-button:hover {
    background: rgb(15 118 110);
  }

  .workflow-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Comments */
  .comments-section {
    border-top: 1px solid var(--sl-color-gray-5);
    padding-top: 2rem;
  }

  .comments-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--sl-color-text);
    margin-bottom: 1.5rem;
  }

  .comments-count {
    font-size: 0.875rem;
    font-weight: normal;
    color: var(--sl-color-gray-3);
  }

  .comment-form-section {
    margin-bottom: 2rem;
  }

  .comment-input {
    width: 100%;
    min-height: 100px;
    padding: 0.75rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    background: var(--sl-color-bg);
    color: var(--sl-color-text);
    font-family: inherit;
    font-size: 0.875rem;
    resize: vertical;
  }

  .comment-input:focus {
    outline: none;
    border-color: rgb(13 148 136);
  }

  .comment-form-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 0.5rem;
  }

  .char-count {
    font-size: 0.75rem;
    color: var(--sl-color-gray-4);
  }

  .submit-comment-btn {
    padding: 0.5rem 1rem;
    background: rgb(13 148 136);
    color: white;
    border: none;
    border-radius: 0.375rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
  }

  .submit-comment-btn:hover:not(:disabled) {
    background: rgb(15 118 110);
  }

  .submit-comment-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .comments-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .comment {
    padding: 1rem;
    background: var(--sl-color-gray-6);
    border-radius: 0.5rem;
  }

  .comment-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .comment-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .comment-author .author-avatar {
    width: 1.5rem;
    height: 1.5rem;
    font-size: 0.625rem;
  }

  .comment-author .author-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--sl-color-text);
  }

  .comment-time {
    font-size: 0.75rem;
    color: var(--sl-color-gray-4);
  }

  .comment-content {
    color: var(--sl-color-gray-2);
    font-size: 0.875rem;
    line-height: 1.5;
    white-space: pre-wrap;
  }

  .no-comments {
    text-align: center;
    padding: 2rem;
    color: var(--sl-color-gray-4);
    font-size: 0.875rem;
  }

  .hidden {
    display: none !important;
  }
</style>
